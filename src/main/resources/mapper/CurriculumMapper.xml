<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.study.mapper.CurriculumMapper">
    <resultMap id="BaseResultMap" type="com.study.bean.Curriculum">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="teacherid" property="teacherid"/>
        <result column="date" property="date"/>
        <result column="chapterid" property="chapterid"/>
        <result column="introduce" property="introduce"/>
        <result column="suggest" property="suggest"/>
    </resultMap>

    <resultMap id="lazyLoadChapter" type="com.study.bean.Curriculum" extends="BaseResultMap">
        <collection property="chapters" ofType="com.study.bean.Chapter" select="com.study.mapper.CurriculumMapper.getChaptersById"
                    column="chapterid"/>
    </resultMap>

    <select id="getCurriculumById" resultMap="lazyLoadChapter">
        select * from curriculum where id=#{id};
    </select>

    <select id="getCurriculumByTitle" resultMap="lazyLoadChapter">
        select * from curriculum where title=#{title};
    </select>

    <select id="getAll" resultType="com.study.bean.Curriculum">
        select * from curriculum;
    </select>

    <select id="getChaptersById" parameterType="String" resultType="com.study.bean.Chapter">
        select * from chapter where id in
        <foreach collection="_parameter.split(',')" item="id" open="(" separator="," close=")" index="index" >
            #{id}
        </foreach>
    </select>

    <insert id="addCurriculum" parameterType="com.study.bean.Curriculum">
        insert into curriculum(title, teacherid, chapterid, introduce, suggest) values (#{title}, #{teacherid}, #{chapterid}, #{introduce}, #{suggest});
    </insert>
</mapper>